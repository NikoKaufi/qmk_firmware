{
    "manufacturer": "Nikolaj Kaufmann",
    "keyboard_name": "niko_split_v2",
    "maintainer": "NikoKaufi",
    "bootloader": "rp2040",
    "processor": "RP2040",
    // "url": "",
    "usb": {
        "device_version": "1.0.0",
        "pid": "0x0001",
        "vid": "0x4E4B"
    },
    "features": {
        "bootmagic": true,
        "command": false,
        "console": false,
        "extrakey": true,
        "mousekey": true,
        "nkro": true
    },
    "diode_direction": "COL2ROW",
    "matrix_pins": {
        "rows": ["GP0", "GP5", "GP6", "GP#"],
        "cols": ["GP29", "GP2", "GP28", "GP3", "GP22", "GP4", "GP#"]
    },
    "bootmagic": {
        "matrix": [0, 0]
    },
    "enoder": {
        "rotary": [
            {
                "pin_a": "GP23",
                "pin_b": "GP21"
            }
        ]
    },
    "split": {
        // "soft_serial_pin": "XY",
        "matrix_pins": {
            "right": {
                "rows": ["R1", "R2", "R3", "R4"],
                "cols": ["C0", "C1", "C2", "C3", "C4", "C5", "C6"]
            }
        },
        "bootmagic": {
            "matrix": [4, 6]
        },
        "encoder": {
            "right": {
                "rotary": [
                    {
                        "pin_a": "F6",
                        "pin_b": "F7"
                    }
                ]
            }
        },
        // "transport": {
        //     "sync": {
        //         "matrix_state": true
        //     }
        // }
    },
    "dynamic_keymap": {
        "layer_count": 4
    },
